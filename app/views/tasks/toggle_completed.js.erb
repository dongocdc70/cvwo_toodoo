$("#completed_link_<%= @task.id %>").text("<%= completed_link_text(@task) %>");
$("#completed_link_<%= @task.id %>").attr('class', '<%= completed_link_text(@task) %>');

<% if (count_today = Task.where(deadline: Date.today.beginning_of_day..Date.today.end_of_day, completed: false).count).zero? %>
$("#title-display").text("Today is <%= Date::DAYNAMES[Date.today.wday] %>. You've finished all the tasks!");
<% else %>
$("#title-display").text("Today is <%= Date::DAYNAMES[Date.today.wday] %>. You've got <%= pluralize(count_today, 'task') %> left today!");
<% end %>

$('#badge-noti-today').text('<%= count_today %>')
$('#badge-noti-other').text('<%= count_other = Task.where.not(deadline: Date.today.beginning_of_day..Date.today.end_of_day).or(Task.where(deadline: nil)).where(completed: false).count %>')


